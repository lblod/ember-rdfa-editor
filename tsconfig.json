{
  "compilerOptions": {
    "target": "es2020",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noEmitOnError": false,
    "noEmit": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "module": "es2020",
    "experimentalDecorators": true,
    "lib": [
      "ES2017",
      "ES2019.Object",
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "paths": {
      "dummy/tests/*": [
        "tests/*"
      ],
      "dummy/*": [
        "tests/dummy/app/*",
        "app/*",
        "lib/plugin-system-dispatcher/app/*",
        "lib/rdfa-parser/app/*"
      ],
      "@lblod/ember-rdfa-editor": [
        "addon"
      ],
      "@lblod/ember-rdfa-editor/*": [
        "addon/*"
      ],
      "@lblod/ember-rdfa-editor/test-support": [
        "addon-test-support"
      ],
      "@lblod/ember-rdfa-editor/test-support/*": [
        "addon-test-support/*"
      ],
      "plugin-system-dispatcher": [
        "lib/plugin-system-dispatcher/addon"
      ],
      "plugin-system-dispatcher/*": [
        "lib/plugin-system-dispatcher/addon/*"
      ],
      "plugin-system-dispatcher/test-support": [
        "lib/plugin-system-dispatcher/addon-test-support"
      ],
      "plugin-system-dispatcher/test-support/*": [
        "lib/plugin-system-dispatcher/addon-test-support/*"
      ],
      "*": [
        "types/*"
      ],
      "rdfa-parser/test-support": [
        "lib/rdfa-parser/addon-test-support"
      ],
      "rdfa-parser/test-support/*": [
        "lib/rdfa-parser/addon-test-support/*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "addon/**/*",
    "tests/**/*",
    "types/**/*",
    "test-support/**/*",
    "addon-test-support/**/*",
    "lib/dummy-plugin",
    "playwright.config.ts"
  ]
}
