{
  "private": true,
  "version": "10.11.3",
  "license": "MIT",
  "author": "redpencil.io",
  "scripts": {
    "build": "pnpm --filter @lblod/ember-rdfa-editor build",
    "build:test-app": "pnpm --filter test-app build",
    "lint": "pnpm --filter '*' lint",
    "lint:fix": "pnpm --filter '*' lint:fix",
    "prepare": "pnpm build",
    "start": "concurrently 'pnpm:start:*' --restart-after 5000 --prefixColors auto",
    "start:addon": "pnpm --filter @lblod/ember-rdfa-editor start --no-watch.clearScreen",
    "start:test-app": "pnpm --filter test-app start",
    "test": "pnpm --filter '*' test",
    "test:ember": "pnpm --filter '*' test:ember",
    "prettier": "prettier --write ."
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "18",
        "react-dom": "18",
        "ember-source": "6"
      }
    },
    "patchedDependencies": {
      "ember-source@6.1.0": "./patches/ember-source@6.1.0.patch",
      "@embroider/addon-dev": "patches/@embroider__addon-dev.patch"
    },
    "allowNonAppliedPatches": true,
    "onlyBuiltDependencies": [
      "core-js",
      "@parcel/watcher",
      "ember-source"
    ]
  },
  "packageManager": "pnpm@10.1.0",
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@glint/core": "^1.2.1",
    "concurrently": "^8.2.0",
    "prettier": "^3.0.3",
    "prettier-plugin-ember-template-tag": "^2.0.2"
  }
}
