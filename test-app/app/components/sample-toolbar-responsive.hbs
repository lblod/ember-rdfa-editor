{{! @glint-nocheck: not typesafe yet }}
<ResponsiveToolbar>
  <:main as |Tb|>
    <Tb.Group>
      <Plugins::History::Undo @controller={{@controller}} />
      <Plugins::History::Redo @controller={{@controller}} />
    </Tb.Group>
    <Tb.Group>
     <Toolbar::Dropdown @icon={{this.FormatTextIcon}} @direction='horizontal' as |Menu|>
      <Plugins::TextStyle::Bold @controller={{@controller}} @onActivate={{Menu.closeDropdown}}/>
      <Plugins::TextStyle::Italic @controller={{@controller}} @onActivate={{Menu.closeDropdown}}/>
      <Plugins::TextStyle::Strikethrough @controller={{@controller}} @onActivate={{Menu.closeDropdown}}/>
      <Plugins::TextStyle::Underline @controller={{@controller}} @onActivate={{Menu.closeDropdown}}/>
      <Plugins::TextStyle::Superscript @controller={{@controller}} @onActivate={{Menu.closeDropdown}}/>
      <Plugins::TextStyle::Subscript @controller={{@controller}} @onActivate={{Menu.closeDropdown}}/>
      <Plugins::Heading::HeadingMenu @controller={{@controller}} @onActivate={{Menu.closeDropdown}}/>
    </Toolbar::Dropdown>
     <Plugins::TextStyle::Color
        @controller={{@controller}}
        @defaultColor="#000000"
      />
      <Plugins::TextStyle::Highlight
        @controller={{@controller}}
        @defaultColor="#FFEA00"
      />
    </Tb.Group>
    {{#if this.supportsTables}}
      <Tb.Group>
        <Plugins::Table::TableMenu @controller={{@controller}} />
      </Tb.Group>
    {{/if}}
    <Tb.Group>
      <Plugins::List::Unordered @controller={{@controller}} />
      <Plugins::List::Ordered
        @controller={{@controller}}
        @enableHierarchicalList={{@enableHierarchicalList}}
      />
    </Tb.Group>
    <Tb.Group>
      <Plugins::Alignment::AlignmentMenu @controller={{@controller}} />
    </Tb.Group>
    <Tb.Group>
      <Plugins::Indentation::IndentationMenu @controller={{@controller}} />
    </Tb.Group>
    <Tb.Group>
      <Toolbar::Dropdown  @icon={{this.PlusIcon}} @direction='horizontal' as |Menu|>
        <Plugins::Link::LinkMenu @controller={{@controller}} @onActivate={{Menu.closeDropdown}}/>
        <Plugins::Image::InsertMenu @controller={{@controller}} @onActivate={{Menu.closeDropdown}}/>
      </Toolbar::Dropdown>
    </Tb.Group>
  </:main>
  <:side as |Tb|>
    <Tb.Group>
      <Toolbar::Dropdown  @icon={{this.ThreeDotsIcon}} @direction='horizontal' as |Menu|>
        <Plugins::HtmlEditor::Menu @controller={{@controller}} @onActivate={{Menu.closeDropdown}} />
        <Plugins::Formatting::FormattingToggle @controller={{@controller}} @onActivate={{Menu.closeDropdown}}/>
      </Toolbar::Dropdown>
    </Tb.Group>
    {{yield}}
  </:side>
</ResponsiveToolbar>