{{#if allBusy}}
	<div class="grid grid--collapse">
		<div class="col--2-12 u-align-center">
			<i class="fa fa-rotate-right fa-spin"></i>
		</div>
		<div class="col--10-12">
			<p class="small">
				Nieuwe informatie verwerken... {{busyPluginsCount}}/{{pluginsCount}}
			</p>
		</div>
	</div>

{{else}}
  {{#if anyPluginBusy}}
  	<div class="grid grid--collapse">
			<div class="col--2-12 u-align-center">
				<i class="fa fa-rotate-right fa-spin"></i>
			</div>
			<div class="col--10-12">
				<p class="small">
					Nieuwe informatie verwerken... {{busyPluginsCount}}/{{pluginsCount}}
				</p>
			</div>
		</div>
  {{else if editorBusy}}
  	<div class="grid grid--collapse">
			<div class="col--2-12 u-align-center">
				<i class="fa fa-rotate-right fa-spin"></i>
			</div>
			<div class="col--10-12">
				<p class="small">
					Aan het laden
				</p>
			</div>
		</div>
  {{else}}
  	<div class="grid grid--collapse">
			<div class="col--2-12 u-align-center">
			<i class="vi vi-check vi-u-s"></i>
			</div>
			<div class="col--10-12">
				<p class="small">
					Klaar met verwerken
				</p>
			</div>
		</div>

  {{/if}}
{{/if}}
