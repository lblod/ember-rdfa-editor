<AuContent @skin="tiny">
  <AuToolbar as |Group|>
    <Group>
      <AuButton @icon="plus" @skin="naked" {{on "click" (fn this.openModal false)}}>
        Wrap With Block Resource
      </AuButton>
    </Group>
    <Group>
      <AuButton
        @icon="plus"
        @skin="naked"
        @disabled={{not this.canWrapWithLiteral}}
        {{on "click" this.wrapWithLiteralNode}}
      >
        Wrap With Block Literal
      </AuButton>
    </Group>

    <Group>
      <AuButton @icon="plus" @skin="naked" {{on "click" (fn this.openModal true)}}>
        Wrap With Inline Resource
      </AuButton>
    </Group>
    <Group>
      <AuButton
        @icon="plus"
        @skin="naked"
        @disabled={{not this.canWrapWithInlineLiteral}}
        {{on "click" this.wrapWithInlineLiteralNode}}
      >
        Wrap With Inline Literal
      </AuButton>
    </Group>
  </AuToolbar>
</AuContent>

<this.Modal
  @modalOpen={{this.modalOpen}}
  @closeModal={{this.closeModal}}
  @wrapWithResource={{this.wrapWithResource}}
/>