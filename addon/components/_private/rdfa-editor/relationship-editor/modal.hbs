{{#let (unique-id) as |formId|}}
  <AuModal @modalOpen={{true}} @closable={{true}} @closeModal={{@onCancel}}>
    <:title>Add Relationship</:title>
    <:body>
      <this.OutgoingTripleForm
        id={{formId}}
        @onSubmit={{this.save}}
        @controller={{this.controller}}
        @termTypes={{(array "LiteralNode" "ResourceNode")}}
      />
    </:body>
    <:footer>
      <AuButtonGroup>
        <AuButton
          form={{formId}}
          type="submit"
        >Save</AuButton>
        <AuButton @skin="secondary" {{on "click" @onCancel}}>Cancel</AuButton>
      </AuButtonGroup>
    </:footer>
  </AuModal>
{{/let}}