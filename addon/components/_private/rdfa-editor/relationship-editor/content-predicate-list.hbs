<AuList @divider={{true}} as |Item|>
  {{#each this.contentPredicates as |entry|}}
    <Item
      class="au-u-flex au-u-flex--row au-u-flex--between au-u-flex--vertical-center"
    >{{entry.prop.predicate}}
      <AuDropdown @icon="three-dots" role="menu" @alignment="left">
        <AuButton
          @skin="link"
          @icon="bin"
          role="menuitem"
          class="au-c-button--alert"
          {{on "click" (fn @removeProperty entry.index)}}
        >
          Remove content predicate
        </AuButton>
      </AuDropdown>
    </Item>
  {{else}}
    <form {{on "submit" this.addContentProperty}}>
      <AuFormRow @alignment="post">
        <AuButton
          @type="submit"
          @icon="add"
          @skin="secondary"
          aria-label="Add"
          {{on "click" this.addContentProperty}}
        />
        <AuInput
          aria-label="New predicate input"
          id="new-predicate-input"
          value={{this.newPredicate}}
          placeholder="Add new predicate"
          {{on "change" this.setNewPredicate}}
        />

      </AuFormRow>
    </form>
  {{/each}}
</AuList>