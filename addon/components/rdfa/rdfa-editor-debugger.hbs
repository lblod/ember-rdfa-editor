<button {{on 'click' this.toggleDebug}} type='button'>debug</button>
{{#if this.debugEnabled}}
  <div class='rdfa-debugger-panel-wrapper'>
    <div class='rdfa-debugger-content'>
      <h1>Debugger</h1>
      <button {{on 'click' this.toggleDebug}} type='button'>close</button>
      <div>
        <label>Debug mode: </label>
        <select {{on 'change' this.updateDebugMode}}>
          {{#each this.debugModes as |mode|}}
            <option
              value={{mode}}
              selected={{eq this.debugMode mode}}
            >{{mode}}</option>
          {{/each}}
        </select>
      </div>
      {{#if (eq this.debugMode 'hints-registry')}}
        <Rdfa::HintsRegistryDebugger
          @hintsRegistry={{this.debug.hintsRegistry}}
        />
      {{else if (eq this.debugMode 'context-scanner')}}
        <Rdfa::RdfaContextDebugger
          @editor={{this.debug.editor}}
          @contextScanner={{this.debug.contextScanner}}
        />
      {{/if}}
    </div>
  </div>
{{/if}}