{{! @glint-nocheck: not typesafe yet }}
<div
  class="say-container
    {{if @editorOptions.showRdfaHover 'say-container--sidebar-left'}}
    {{if @editorOptions.showPaper 'say-container--paper'}}
    {{if
      (and (has-block 'aside') (not @hideSidebar))
      'say-container--sidebar-right'
    }}
    {{if @editorOptions.showToolbarBottom 'say-container--toolbar-bottom'}}"
>
  {{yield to="top"}}
  <div class="say-container__main">
    {{#if @loading}}
      <AuLoader @hideMessage={{true}}>
        {{t "ember-rdfa-editor.utils.loading"}}
      </AuLoader>
    {{/if}}

    <div
      class="say-editor
        {{if @editorOptions.showRdfa 'rdfa-annotations'}}
        {{if @editorOptions.editRdfa 'rdfa-editing'}}
        {{if @editorOptions.showRdfaHighlight 'rdfa-annotations-highlight'}}
        {{if @editorOptions.showRdfaHover 'rdfa-annotations-hover'}}
        {{if @loading 'au-u-hidden-visually'}}
        {{if @showRdfaBlocks 'show-rdfa-blocks'}}"
    >
      {{yield}}

    </div>
    {{#if (and (has-block "aside") (not @hideSidebar))}}
      <div class="say-container__aside">
        {{yield to="aside"}}
      </div>
    {{/if}}
  </div>
</div>